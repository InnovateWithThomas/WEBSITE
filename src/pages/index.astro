  <!-- Contact Section -->
  <section id="contact">
    <h2>Contact</h2>
    <form action="#" method="POST" class="contact-form">
      <label>
        Name
        <input type="text" name="name" required />
      </label>
      <label>
        Email
        <input type="email" name="email" required />
      </label>
      <label>
        Message
        <textarea name="message" rows="5" required></textarea>
      </label>
      <button type="submit" class="btn">Send</button>
    </form>
  </section>

  <slot name="footer">
    <Footer lang="en" />
  </slot>
